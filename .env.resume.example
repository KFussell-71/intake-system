# Reactive Resume Configuration
# Copy this file to .env.resume and fill in your values

# Application URLs
RESUME_PUBLIC_URL=http://localhost:3001
RESUME_STORAGE_URL=http://localhost:9000

# Security Keys (CHANGE THESE!)
RESUME_SECRET_KEY=change-this-to-a-random-32-char-string
JWT_SECRET=change-this-to-another-random-string
CHROME_TOKEN=change-this-chrome-token

# Database
POSTGRES_PASSWORD=change-this-secure-password

# MinIO Storage
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=change-this-minio-secret

# SMTP (Optional - for password reset)
SMTP_URL=smtp://user:pass@smtp.example.com:587
MAIL_FROM=noreply@example.com

# API Integration (for Next.js app)
NEXT_PUBLIC_RESUME_API_URL=http://localhost:3001/api
NEXT_PUBLIC_RESUME_PUBLIC_URL=http://localhost:3001
NEXT_PUBLIC_RESUME_PRINTER_URL=http://localhost:8080
RESUME_API_KEY=your-api-key-here
